            android:name="com.example.alon.foodapp.activity.howToDoRecipe"
            android:label="איך להכין את המוצר"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.alon.foodapp.activity.Product_Type_list_Activity"
            android:label="סוגי המוצרים"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.alon.foodapp.activity.product_from_type_Activity"
            android:label="המוצרים"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.alon.foodapp.activity.SearchForAProductActivity"
            android:label="חיפוש מוצרים"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.alon.foodapp.activity.whatMissToOrder"
            android:label="מה חסר לך"
            android:theme="@style/AppTheme" />
    </application>

</manifest>