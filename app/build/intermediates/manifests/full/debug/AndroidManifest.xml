<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alon.foodapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.alon.foodapp.activity.MainActivity"
            android:label="@string/app_name2" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.alon.foodapp.activity.userListActivity"
            android:label="מוצרים שנבחרו"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.alon.foodapp.activity.recipesListActivity"
            android:label="רשימת מתכונים "
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.alon.foodapp.activity.Search_Recipe_Activity"
            android:label="חיפוש מתכון לפי שם"
            android:theme="@style/AppTheme" />
