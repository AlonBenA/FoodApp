<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="return and not add new product"
        android:id="@+id/ptl_return"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="notAddTheNew"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="see all product"
        android:id="@+id/ptl_add"
        android:layout_above="@+id/ptl_return"
        android:layout_centerHorizontal="true"
        android:onClick="AddTheNew"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_type_listView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ptl_add" />
</RelativeLayout>
