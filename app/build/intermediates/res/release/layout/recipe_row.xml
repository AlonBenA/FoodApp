<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/recipesNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Recipes Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/RecipeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe explanation"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:layout_below="@+id/recipesNameView"
        android:layout_alignRight="@+id/recipesNameView"
        android:layout_alignEnd="@+id/recipesNameView" />

    <Button
        android:id="@+id/seeRecipeButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Recipe"
        android:textColor="#0099CC"
        android:layout_alignBottom="@+id/RecipeTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/seeImageButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Image"
        android:textColor="#0099CC"
        android:layout_alignTop="@+id/seeRecipeButton"
        android:layout_toRightOf="@+id/seeRecipeButton"
        android:layout_toEndOf="@+id/seeRecipeButton"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

</RelativeLayout>
